<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-cart-plus"></i> Add Tuna Record
        </h1>
        <% include ./partials/messages %>
        <form action="/tuna/addtuna" method="POST">
            
          <div class="form-group">
            <label for="cid">Enter catch id:</label>
            <input
              type="text"
              id="cid"
              name="cid"
              class="form-control"
              placeholder="Ex: 11"
              value="<%= typeof cid != 'undefined' ? cid : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="vname">Enter name of vessel:</label>
            <input
              type="text"
              id="vname"
              name="vname"
              class="form-control"
              placeholder="Ex: 0239L"
              value="<%= typeof vname != 'undefined' ? vname : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="longi">Enter longitude:</label>
            <input
              type="text"
              id="longi"
              name="longi"
              class="form-control"
              placeholder="Ex: 28.012"
              value="<%= typeof longi != 'undefined' ? longi : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="lati">Enter latitude:</label>
            <input
              type="text"
              id="lati"
              name="lati"
              class="form-control"
              placeholder="Ex: 150.405"
              value="<%= typeof lati != 'undefined' ? lati : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="timestmp">Enter timestamp:</label>
            <input
              type="text"
              id="timestmp"
              name="timestmp"
              class="form-control"
              placeholder="Ex: 4982342301"
              value="<%= typeof timestmp != 'undefined' ? timestmp : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="holder">Enter name of holder:</label>
            <input
              type="text"
              id="holder"
              name="holder"
              class="form-control"
              placeholder="Ex: Hansel"
              value="<%= typeof holder != 'undefined' ? holder : '' %>"
            />
          </div>  
          <input
          type="hidden"
          id="email"
          name="email"
          value= <%= email %>
        />        
          <button type="submit" class="btn btn-primary btn-block">
            Create
          </button>
        </form>
      
      </div>
    </div>
  </div>